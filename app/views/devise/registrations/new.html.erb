<% provide(:title, "新規登録") %>
<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2>Instagramclone</h2>
        <p class="text-secondary">友達の写真や動画をチェックしよう</p>
      </div>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true, method: :patch do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :username, "ユーザーネーム" %>
            <%= f.text_field :username, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :website, "ウェブサイト" %>
            <%= f.text_field :website, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :introduce, "自己紹介" %>
            <%= f.text_area :introduce, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :phonenumber, "電話番号" %>
            <%= f.number_field :phonenumber, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :sex, "性別" %>
            <%= f.select :sex, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control'  } %>
          </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <br>

      <p class="devise-link">
        アカウントをお持ちですか？
        <%= link_to "サインインする", new_user_session_path %>
      </p>
      <div class="devise-link">
      <%= link_to "利用規約", term_path %>
      </div>
    </div>
  </div>
</div>
